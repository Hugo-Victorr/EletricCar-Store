@model UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Usuario</h2>

<form action="Save" method="post" class="col-md-6">

    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <label for="Id" class="control-label">Id</label>
    <input asp-for="Id" class="form-control" readonly />
    <br />

    <label for="Nome" class="control-label">Nome do aluno</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label for="Idade" class="control-label">Idade</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
    <br />

    <label for="Email" class="control-label">Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    
    <label for="Senha" class="control-label">Senha</label>
    <input asp-for="Password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
    <br />

    <label for="DataNascimento" class="control-label">Data de nascimento</label>
    <input asp-for="BornDate" type="date" value="@Model.BornDate.ToString("yyyy-MM-dd")" class="form-control" />
    <span asp-validation-for="BornDate" class="text-danger"></span>
    <br />

    <br />
    <input type="submit" value="Salvar dados" class="btn btn-info" />
    <br />
</form>